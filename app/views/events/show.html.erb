<h2><%= @event.name %></h2>

<ul>
  <li><%= @event.name %></li>
  <li><%= @event.location %></li>
  <li><%= @event.date %></li>
  <li>Attendees: 
    <ul>
      <% @event.attendees.each do |attendee| %>
        <li><%= attendee.email %></li>
      <% end %>
    </ul>
  </li>
</ul>

<%= button_to "Attend Event", event_attendances_path(@event), params: { "attendances" => {event_attendee_id: current_user, attended_event_id: @event } } %>

<%= link_to "Home", root_path %>